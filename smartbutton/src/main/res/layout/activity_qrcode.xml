<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/App_Background"
    tools:context=".activity.QRCode_Activity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ll_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:background="@color/White"
        >

        <ImageView
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_margin="@dimen/dp15"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan_the_qr_code_of_the_herdum_smart_device_nprinted_on_the_device_s_box"
            android:textColor="@color/Text_color"
            android:gravity="center"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250"
            >

            <ImageView
                android:layout_width="@dimen/dp170"
                android:layout_height="@dimen/dp170"
                android:src="@drawable/ic_qr_code__1_"
                android:layout_centerInParent="true"
                android:id="@+id/iv_qrcode"
                />

            <LinearLayout
                android:layout_width="@dimen/dp45"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/iv_qrcode"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp15">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:src="@drawable/ic_battery"
                    />



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:src="@drawable/ic_gallery"
                    android:layout_marginTop="@dimen/dp10"
                    />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp35"
            android:layout_marginEnd="@dimen/dp20"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/colorPrimary"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:layout_centerInParent="true"
                android:text="Or"
                android:padding="@dimen/dp5"
                android:textColor="@color/Text_color"
                />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_top"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp15"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key in serial number of the Herdum Smart Device,\nwritten on the back of device"
            android:textColor="@color/Text_color"
            android:gravity="center"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:background="@color/packageplan_selector"
            android:layout_marginStart="@dimen/dp35"
            android:layout_marginEnd="@dimen/dp35"
            android:layout_marginTop="@dimen/dp15"
            android:hint="8888 0000 0000"
            android:textColorHint="@color/Text_color"
            android:textColor="@color/Text_color"
            />



        <TextView
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/rectangel_submit_button"
            android:layout_gravity="center_horizontal"

            android:text="Apply Now"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginStart="@dimen/dp7"

            android:textColor="@color/White"
            android:gravity="center"
            android:id="@+id/tv_sendotp"
            android:layout_marginLeft="@dimen/dp7" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>